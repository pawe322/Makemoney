<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    tools:context=".ViewArticleActivity">

    <ImageView
        android:id="@+id/thumbImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp" />

    <Button
        android:id="@+id/fab_wallpaper"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbImage"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-55dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"
        android:drawableRight="@drawable/ic_wallpaper_black_24dp"
        android:text="@string/set_as"
        android:drawableEnd="@drawable/ic_wallpaper_black_24dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/fab_download"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-54dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"
        android:drawableRight="@drawable/ic_file_download_black_24dp"
        android:text="@string/download"
        android:drawableEnd="@drawable/ic_file_download_black_24dp" />

</RelativeLayout>